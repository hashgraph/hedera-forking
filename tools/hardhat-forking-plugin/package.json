{
  "name": "@hashgraph/hardhat-forking-plugin",
  "version": "1.0.0",
  "description": "Hashgraph Hardhat TypeScript plugin",
  "repository": "github:hashgraph/hardhat-forking-plugin",
  "author": "2024 Hedera Hashgraph, LLC",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "rm -rf out/* && cp -R ../../out/HtsSystemContract.sol out && cp ../../test/lib/HIP719.bytecode out && tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "src/",
    "README.md"
  ],
  "peerDependencies": {
    "ethers": "^6.11.2",
    "hardhat": "^2.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.6.1",
    "@types/sinon": "^17.0.3",
    "axios": "^1.7.7",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.6.2"
  }
}
